{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    },
    {
      "src": "/upload/(.*)",
      "dest": "/home/ruoyi/uploadPath/$1"
    },
    {
      "src": "/prod-api/(.*)",
      "dest": "http://47.96.8.82:8080/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/.*\\.(js|css)$",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=43200" }
      ]
    }
  ],
  "env": {
    "API_URL": "http://47.96.8.82:8080"
  }
}

